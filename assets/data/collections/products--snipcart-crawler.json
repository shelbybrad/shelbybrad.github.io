---
entity_type: products
layout: compress
limit: 100
---
[
  {% for entity in site[page.entity_type] limit: page.limit %}
    {
      "name": {{ entity.title | jsonify }},
      "id": {{ entity.sku | jsonify }},
      "price": {{ entity.price }},
      "description": {{ entity.meta.description | jsonify }},
      {% if entity.meta.image.src %}
        "image": "{{ site.url }}{{ site.subpath }}/assets/images/{{ entity.meta.image.src }}",
      {% endif %}
      "url": "{{ entity.url | absolute_url }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
